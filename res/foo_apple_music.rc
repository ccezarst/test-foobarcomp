#include "resource.h"

IDD_APPLE_MUSIC_PREFS DIALOGEX 0, 0, 320, 200
STYLE DS_SETFONT | WS_CHILD | WS_VISIBLE
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "MusicKit developer token:", -1, 7, 7, 140, 10
    EDITTEXT        IDC_EDIT_DEVELOPER_TOKEN, 7, 18, 306, 14, ES_AUTOHSCROLL
    LTEXT           "Account status:", -1, 7, 40, 80, 10
    LTEXT           "Not signed in", IDC_STATIC_APPLE_MUSIC_STATUS, 90, 40, 223, 10
    LTEXT           "Music-user token:", -1, 7, 55, 80, 10
